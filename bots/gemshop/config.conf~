inherit shop

subs parent

# indicate that ALL topic lists are copied from the direct parent

topics inherit

# and now we override bot-global variables - here, the things we buy and sell.

global
    "gemshop" !@shopname

    # selling
    [%
        ~diamond 64,
        ~lapis_block 32,
        ~emerald 32
    ] !@thingsisell

    # buying
    [%
        ~diamond 48,
        ~emerald 32,
        ~obsidian 16
    ]
    none !@thingsibuy

;
